extends layout

block content
  h1= title
  - let result=results  
    div(class="row")
      each form,index in result
          - let destination = `dispatch(\"/Tea/update?id=${result._id}\")`
          div(class="row-sm-2", class="m-1") Result #{result.Brand}(#{result.Flavour}) is #{result.Cost}
              button.btn( class="btn-primary ml-1", onclick= destination) Update

      script.
          function dispatch(path){
              window.location.href = path
          }